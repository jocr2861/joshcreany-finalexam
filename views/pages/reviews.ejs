<%- include('../partials/header') %>
<%- include('../partials/menu') %>

<table class="table table-bordered" id="reviews_table">
    <tr>
        <th class="align-bottom" rowspan="3">Book Reviews</th>
    </tr>
    <tr>
        <th>Book</th>
        <th>Review</th>
        <th>Review Date</th>
    </tr>
    <%
    if (results) {
        var rows = '';
        results.forEach(function(item){
            rows += '<tr><td>'+item.title+'</td><td>'+item.review+'</td><td>'+item.review_date+'</td></tr>';
        }); %>
        <%- rows %>
    <% } %>
</table>

<%- include('../partials/footer') %>